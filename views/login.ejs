<%-include ../partials/head.ejs%>
    <%-include ../partials/navbar.ejs%>

<div class="container bg-light mt-5 p-2 border col-3 rounded">
    <h4 class="text-center mt-2">Se connecter</h4>
    <p class="text-center text-danger"><%= errorMsg %></p>
    <form action="/login" method="post">
         <div class="form-group">
            <label>Username:</label>
            <input type="text" name="username"><br/>
        </div>
         <div class="form-group">
            <label>Password:</label>
            <input type="password" name="password">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-outline-success" value="Submit">Ok</button>
        </div>
    </form>
    <a class="btn btn-outline-success" href="/signin">Creer un compte</a>
</div>
